# ========================================
# BANCO DE DADOS (PostgreSQL)
# ========================================
# Local: postgresql://usuario:senha@host:porta/banco
# Produção: use credenciais seguras
DATABASE_URL="postgresql://twinslkit_user:senha_forte@localhost:5432/twinslkit?schema=public"

# ========================================
# LIVEKIT (Video/Voz/Tela)
# ========================================
# Em desenvolvimento: ws:// (HTTP)
# Em produção: wss:// (HTTPS seguro)
# Obtenha URL/Key/Secret do seu servidor LiveKit
LIVEKIT_URL=wss://livekit.seu-dominio.com
NEXT_PUBLIC_LIVEKIT_URL=wss://livekit.seu-dominio.com
LIVEKIT_API_KEY=sua_api_key_aqui
LIVEKIT_API_SECRET=sua_api_secret_aqui

# ========================================
# CLOUDFLARE TURNSTILE (Proteção Anti-Bot)
# ========================================
# Habilitar proteção Turnstile em login/registro
# Importante: Use NEXT_PUBLIC_ para o frontend acessar a variável
# Valores aceitos: "true" para habilitar, "false" ou vazio para desabilitar
NEXT_PUBLIC_ENABLE_TURNSTILE=true

# Site Key (visível no frontend)
# Obtenha em: https://dash.cloudflare.com/?to=/:account/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAAxxxxxxxxxxxxxxxxxx

# Secret Key (apenas backend - NUNCA exponha no frontend)
TURNSTILE_SECRET_KEY=0x4AAAAAAAxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# APLICAÇÃO
# ========================================
# Nome da aplicação (aparece no login e metadata)
NEXT_PUBLIC_APP_NAME=TwinsLKit

# ========================================
# LIMITES DE TEXTO (em caracteres)
# ========================================
# Máximo de caracteres em mensagens de canais e DMs (padrão: 2000)
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=2000

# Máximo de caracteres em razões de moderação (ban, timeout, kick) (padrão: 400)
NEXT_PUBLIC_MAX_MODERATION_REASON_LENGTH=400

# ========================================
# LIMITES DE TIMEOUT DE VOZ (em minutos)
# ========================================
# Máximo de duração para timeout de voz (padrão: 4320 = 72 horas)
NEXT_PUBLIC_MAX_TIMEOUT_MINUTES=4320

# ========================================
# LIMITES DE UPLOAD (em MB)
# ========================================
# Anexos em canais (imagens, vídeos, documentos, etc) (padrão: 50MB)
CHANNEL_UPLOAD_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_CHANNEL_UPLOAD_MAX_FILE_SIZE_MB=50

# Avatar de usuário (padrão: 10MB)
NEXT_PUBLIC_MAX_AVATAR_SIZE_MB=10

# GIF de perfil do usuário (padrão: 15MB)
NEXT_PUBLIC_MAX_PROFILE_GIF_SIZE_MB=15

# Áudio/Som para soundboard (padrão: 8MB)
NEXT_PUBLIC_MAX_SOUND_FILE_SIZE_MB=8

# Figurinhas do servidor (padrão: 8MB)
NEXT_PUBLIC_MAX_STICKER_FILE_SIZE_MB=8

# Emojis customizados do servidor (padrão: 2MB)
NEXT_PUBLIC_MAX_EMOJI_FILE_SIZE_MB=2

# ========================================
# LIMITES DE ÁUDIO (em segundos)
# ========================================
# Duração máxima para sons do soundboard (padrão: 10 segundos)
NEXT_PUBLIC_MAX_SOUND_DURATION_SECONDS=10

# ========================================
# DESENVOLVIMENTO (opcional)
# ========================================
# ALLOWED_DEV_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SPAM_RATE_WINDOW_MS=12000
SPAM_MAX_MESSAGES_PER_WINDOW=8
SPAM_DUPLICATE_WINDOW_MS=20000
SPAM_MAX_IDENTICAL_MESSAGES=3
SPAM_TEMP_BLOCK_MS=20000